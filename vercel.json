{
  "version": 2,
  "builds": [{
    "src": "api/**/*.js",
    "use": "@vercel/node",
    "config": { "runtime": "nodejs20.x" }
  }],
  "build": {
    "env": {
      "NPM_CONFIG_PRODUCTION": "false"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ]
}